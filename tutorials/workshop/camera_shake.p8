function _init()
	camx,camy=0,0
	cam_shake=0
end

function _update()
	if (btnp(❎)) boom(10)
	if (btnp(🅾️)) boom(20)
end

function _draw()
	cls()
	map()
	camera(camx,camy)
	shake_it()
end
-->8
function boom(amt)
	sfx(0)
	cam_shake=amt
end

function shake_it()
	if cam_shake>0.5 then
		local cx,cy=camx,camy
		cx+=rnd()*cam_shake*rnd({-1,1})
		cy+=rnd()*cam_shake*rnd({-1,1})
		camera(cx,cy)
		cam_shake*=0.75
	end
end
