version 26
__lua__
function _init()
	c_move=cocreate(move)
end

function _update()
	if (c_move==nil) c_move=cocreate(move)
	if c_move and costatus(c_move)~="dead" then
		coresume(c_move)
	else 
		c_move=nil
	end
end

function _draw()
	cls()
	circ(x,y,r,12)
end

function move()
	x,y=32,32
	r=10
	yield()
	for i=0,60 do
		x+=1
		yield()
	end	
	for i=0,60 do
		y+=1
		yield()
	end
	for i=0,60 do
		x-=1
		yield()
	end	
	for i=0,60 do
		y-=1
		yield()
	end	
end
