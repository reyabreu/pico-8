pico-8 cartridge // http://www.pico-8.com
version 26
__lua__
--run once at the beginning
function _init()
	x,y=64,64
end

--run 30 times a second
function _update()
	if (btn(⬅️)) x-=3 --0
	if (btn(➡️)) x+=3	--1
	if (btn(⬆️)) y-=3	--2
	if (btn(⬇️)) y+=3	--3
	
	if (x>128) x=0
	if (x<0) x=128
end

-- also 30 times a second
-- after update
function _draw()
	cls()
	spr(1,x,y)
end
