function rndb(lo,hi)
	return flr(rnd(hi-lo+1)+lo)	
end

function _init()
	stars={}
	for i=1,80 do
		add(stars,{x=rndb(2,126),y=rndb(2,126)})
	end
	ship={
		x=5,y=60
	}
	shots={}
end

function _update()
	for s in all(shots) do
		if s.x>128 then
			del(shots,s)
		else
			s.x+=5
		end
	end

