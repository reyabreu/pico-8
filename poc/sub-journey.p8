player={}

anim=0
weed_sprite=0

function _init()
	player={
		x=20,y=20,delta=0,
		anim=0,speed=2,flipx=false
	}
	local weed={}
	for i=1,4 do
		weed={x=rnd(flr())}
		add(weeds,weed)
	end
end

function _update()
	local dx=0
	if (btn(0)) dx=-1
	if (btn(1)) dx=1
	if (btn(2)) player.y-=player.speed
	if (btn(3)) player.y+=player.speed
	
	if (dx!=0) then
		player.x+=dx*player.speed
		player.flipx=dx>0
	end 
	
	player.anim+=1
	player.delta=4*sin(player.anim/30)
	if (player.anim>=30) then player.anim=0 end
	
	if t()%3 then
		anim+=1
		weed_sprite=16+anim%2
	end
end


function _draw()
	cls(5)
	map(0,0,8,8,14,8)
	mset(5,5,6)
	spr(1,player.x,player.y+player.delta,1,1,player.flipx)
end
