pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
lt={}

function rndb(lo,hi)
	return flr(lo+rnd(hi-lo+1))
end

function nline(prev)
	return mid(20,rndb(prev-3,prev+3),40)
end

function _init()
	cls(1)
	-- set clip area
	clip(20,20,81,81)

	-- fill lines array
 	lt[1]=rndb(25,35)
	for i=2,64 do -- count up
		add(lt,nline(lt[i-1]))
	end
end

function _draw()
	-- draw border of clip area
	rect(20,20,100,100,10)
	
	-- draw lines
	i=1
	for x=0,127,2 do
		line(x,80-lt[i],x,80,rndb(7,9))
		i+=1
	end
	-- set pixels in clip bounds
	pset(20,20,12)
	pset(100,100,12)
end

