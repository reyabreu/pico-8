pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
lt={}

function rndb(l,h)
	return l+flr(rnd(h-l))
end

function nline(pr)
	return mid(20,rndb(pr-3,pr+3),40)
end

function _init()
 cls(1)
	-- fill lines array
 lt[1]=rndb(25,35)
	for i=2,64 do -- count up
			add(lt,nline(lt[i-1]))
	end
	-- set clip area
	clip(20,20,81,81)
	-- draw lines
	i=1
	for x=0,127,2 do
		line(x,80-lt[i],x,80,8)
		i+=1
	end
	rect(20,20,100,100,10)
	--set pixel in clip bounds
	pset(20,20,12)
	pset(100,100,12)
end
