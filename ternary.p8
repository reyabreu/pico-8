__lua__
function _init()
	alive=true
end

function _update()
	alive=btn(❎)
end

function _draw()
	cls()
	spr(alive and 1 or 2,60,60)
	cursor(48,68)
	local txt="skully game"
	print(txt,64-#txt*2,70,6)
	txt="press ❎ for life"
	print(txt,64-#txt*2,78,rnd()>0.5 and 12 or 11)
end
