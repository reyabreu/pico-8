pico-8 cartridge // http://www.pico-8.com
version 26
__lua__
z=15
timer=19
for i=0,z*z do
	mset(i%15,i/15,rnd(2))
end
::_::
timer+=1
if timer%20==0 then
	for i=0,z*z do
		px,py=flr(i%z)*8,flr(i/z)*8
		if mget(i%z,i/z)>0 then
			spr(1,px,py,1,1,rnd(2)>1,rnd(2)<1)
		else
			rectfill(px,py,px+7,py+7,0)
		end	
	end
	timer=0
end
--change state
if t()%2==0 then
	for i=0,z*z do
		mx,my=i%z,flr(i/z)
		n=-mget(mx,my)
		for j=0,8 do
			px,py=flr(mx+j%3-1)*8+4,flr(my+j%3-1)*8+4
			if	pget(px,py)>0 then
				n+=1
			end
		end
		if (n<2 or n>3) mset(mx,my,0)
		if (n==3) mset(mx,my,1) 
	end
end
flip()
goto _
