local people={}

function rndb(lo,hi)
 local v=lo+rnd(hi-lo+1)
 srand(v)
	return flr(v)
end

function _init()
    --srand(time())
    local person
    for i=1,5 do    				
        person={
            x=56,      --mid(1,rnb(0,128),128-16),
            y=3+(i-1)*(16+10), --mid(1,rnb(0,128),128-16),
            c=rndb(1,15),
            flip_x=rndb(0,100)>50,
            draw=function(self)
                pal(6,self.c)
                spr(1,self.x,self.y,2,2,self.flip_x)
            end
        }
        add(people,person)
    end    
end

function _update()
    
end

function _draw()
    cls()
    line(64,0,64,127,10)
    rect(0,0,127,127,10)
    print("size:"..#people,5,10)
    for p in all(people) do
    	rect(p.x,p.y,p.x+16,p.y+16,7)
        p:draw()       
    end
    pal()
end

