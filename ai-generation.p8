local people={}

function rnb(lo,hi)
    return flr(lo+rnd(hi-lo+1))
end

function _init()
    srand(time())
    local person
    for i=1,12 do
        person={
            x=mid(1,rnb(0,128),128-16),
            y=mid(1,rnb(0,128),128-16),
            c=rnb(5,13),
            flip_x=rnb(0,2)>1,
            draw=function(self)
                pal(6,self.c)
                spr(1,self.x,self.y,16,16)
            end
        }
        add(people,person)
    end    
end

function _update()
    
end

function _draw()
    cls()
    print("size:"..#people,5,10)
    pal()
    for p in all(people) do
        p:draw()
    end
end

