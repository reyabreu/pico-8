version 20
__lua__
bike={}

function make_bike(x,y)
	local bike={
		x=x,
		y=y,
		orientation=0 --up (anticw)
		speed=1,
		trail={},
		trailsz=50
	}
	return bike
end

function _init()
	bike=make_bike(52,52)
end

function mv_bike(go_left)
	bike.orientation+=go_left and 1 or -1
	if (bike.orientation>3 or bike.orientation<0) bike.orientation=0
end

function _update()
	changereq=btn(0) or btn(1)
	if changereq and canchange then
		if (btn(0)) mv_bike(true)
		if (btn(1)) mv_bike(false)
	end
	canchange=not changereq
	
	local x,y=bike.x,bike.y
	lastpos={x,y}
	add(bike.trail,lastpos)
	if ()
end

function _draw()
 cls(1)
 
	spr(1,bike.x,bike.y)
end
