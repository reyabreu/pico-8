pico-8 cartridge // http://www.pico-8.com
version 20
__lua__
map_x=0
hill_x=0
mount_x=0.0

map_spd=1
hill_spd=0.5
mount_spd=0.25

function _update()
	map_x-=map_spd
	if map_x<-127 then map_x=0 end
	
	hill_x-=hill_spd
	if hill_x<-127 then hill_x=0 end
	
	mount_x=mount_x-mount_spd
	if mount_x<-127 then mount_x=0	end
end

function _draw()
	cls(12)
	map(48,0,mount_x,0,16,16)
	map(48,0,mount_x+128,0,16,16)	
		
	map(32,0,mount_x,0,16,16)
	map(32,0,mount_x+128,0,16,16)	
	
	map(16,0,hill_x,0,16,16)
	map(16,0,hill_x+128,0,16,16)	
	
	map(0,0,map_x,0,16,16)
	map(0,0,map_x+128,0,16,16)
	spr(map_x%3+10,24,72)		
end
