pico-8 cartridge // http://www.pico-8.com
version 26
__lua__
boards={}

function _init()
	board={
		x=10,
		y=30,
		csz=10,
		bcol=10,
		vcol=12,
		cw=3,
		ch=3,
		cells={},
		clear_cells=function(b)
			b.cells={}
		end,
		set_cell=function (b,r,c,v)
			add(b.cells,{r=r,c=c,v=v})
		end,
		
	}
	add(boards,board)		
end

function _update()
	board:clear_cells()
	board:set_cell(1,2,12)
	board:set_cell(1,3,12)
end

function _draw()
	cls()
	local x,y
	for b in all(boards) do
		y=b.y		
		for j=1,b.cw do		
			x=b.x		
			for i=1,b.ch do
				rect(x,y,x+b.csz,y+b.csz,b.bcol)
				x+=b.csz				
			end			
			y+=b.csz	
		end
		for c in all(b.cells) do
			x=b.x+flr((c.r-1/2)*b.csz)
			y=b.y+flr((c.c-1/2)*b.csz)
			circ(x,y,3,c.v)
			--pset(x,y,c.v)
		end
	end
end
