p={}

function _init()
	last=-4
end

function _update()
	if (time()-last>2) then
		p[1]=25+rnd(10)
		for i=2,126 do
			p[i]=p[i-1]-3+rnd(6)
			if (p[i]<10) p[i]=10
		end
		last=time()
	end
end

function _draw()
	cls(1)
	local x,y=1,126
	for v in all(p) do
		line(x,y,x,y-v,8)
		x+=1
	end
end
