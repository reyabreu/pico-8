version 18
__lua__
-- main routines
lp={x=12,y=64,sp=4}
rp={x=116,y=64,sp=4}
b={x=50,y=64,spx=0,spy=0}

function _init()
	cls(1)
	rect(0,0,127,127,7)
	line(64,0,64,127,7)
	
	b.spx=-1
	b.spy=-1
end

function _update()
 local lpsp=0
	if (btn(⬆️)) lpsp=-lp.sp
	if (btn(⬇️)) lpsp=lp.sp
	lp.y=mid(10,lp.y+lpsp,117)
	
	b.x+=b.spx
	b.y+=b.spy
	
	if (b.y<=2 or b.y>=125) b.spy*=-1
	
	if (b.x+2>lp.x-2 and b.x-2<lp.x+2) then
		if (b.y+2>lp.y-10 and b.y-2<lp.y+10) then
    b.x=lp.x+4
		  b.spx*=-1
		  b.spy+=lpsp*0.2
		end
	end
	
	if (b.x+2>rp.x-2 and b.x-2<rp.x+2) then
		if (b.y+2>rp.y-10 and b.y-2<rp.y+10) then
    b.x=rp.x-4
		  b.spx*=-1	
		end
	end
end

function _draw()
 cls(1)
	rect(0,0,127,127,7)
	line(64,0,64,127,7)

	rectfill(lp.x-2,lp.y-10,lp.x+2,lp.y+10,7)
	rectfill(rp.x-2,rp.y-10,rp.x+2,rp.y+10,7)
	circfill(b.x,b.y,2,7)
end
