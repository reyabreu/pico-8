pico-8 cartridge // http://www.pico-8.com
version 20
__lua__
cls()
for x=0,128 do
	for y=0,128 do
	 if (rnd(10)>8.5) pset(x,y,7)
	end
end
::_::
m={}
for x=0,128 do
	for y=0,128 do
	 local n=0
		local cs=pget(x,y)==7
		
		for i=x-1,x+1 do
			for j=y-1,y+1 do
				if (not (i==x and j==y) and pget(i,j)==7)	n+=1
			end
		end
		
		if (n>1 and n<4 and cs) add(m,{x=x,y=y})
		if (n==3 and not cs) add(m,{x=x,y=y})
	end
end
cls()
for c in all(m) do
	pset(c.x,c.y,7)
end
flip()
goto _
