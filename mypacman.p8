pico-8 cartridge // http://www.pico-8.com
version 35
__lua__
pacman = {}

function _init()
	pacman={
		x=64,y=64,
		idx=1,
		dir=1 --right
	}
	ac=0
end

function _update()
 ac+=1
	if ac>5 then
		pacman.idx=1+(pacman.idx+1)%3
		ac-=5
	end
	if (pacman.x>100 or pacman.x<27) then
		pacman.dir=-1*pacman.dir
	end
	pacman.x=pacman.x+(pacman.dir*2)
end

function _draw()
	cls()
	spr(pacman.idx,pacman.x,pacman.y,1,1,pacman.dir,1)
end
